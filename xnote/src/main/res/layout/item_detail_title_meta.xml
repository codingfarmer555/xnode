<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"/>

    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:background="#65CDEC"-->
    <!--        android:layout_marginRight="20dp"-->
    <!--        android:layout_marginLeft="20dp"-->
    <!--        android:layout_height="1px"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张广贺"
            android:layout_marginLeft="20dp"
            android:textColor="#317DEF"/>

        <TextView
            android:id="@+id/tv_publishTime_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08-03 15:23"
            android:layout_marginLeft="10dp"

            android:textColor="#88909C"/>

        <TextView
            android:id="@+id/tv_readCount_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读:4"
            android:layout_marginLeft="10dp"

            android:textColor="#317DEF"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:layout_marginLeft="10dp"

            android:textColor="#317DEF"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_marginLeft="10dp"

            android:textColor="#317DEF"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_noteContent_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="内容"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>